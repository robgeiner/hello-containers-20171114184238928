{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:Get*",
                "s3:List*"
            ],
            "Resource": [
                "arn:aws:s3:::sun-dev-twc",
                "arn:aws:s3:::sun-dev-twc/*",
                "arn:aws:s3:::sun-dev-keys",
                "arn:aws:s3:::sun-dev-keys/*",
                "arn:aws:s3:::sun-dev-bootstrap",
                "arn:aws:s3:::sun-dev-bootstrap/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "ec2:*Tags"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
              "ec2:AttachVolume",
              "ec2:DescribeVolumes",
              "ec2:DetachVolume"
            ],
            "Resource": "*"
        }
    ]
}
